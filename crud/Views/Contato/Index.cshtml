@model List<ContatoModel>;
@{
    ViewData["Title"] = "Contatos";

}
<header class="container">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-action="Index" asp-controller="Home">Controle de contatos</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Contato" aria-current="page">Contatos</a>

                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Cadastra" asp-controller="Contato">Cadastra</a>

                    </li>


                </ul>
            </div>
        </div>
    </nav>
</header>

<main class="  min-vh-100 pb-5">
    <div class="container text-center">
        <div class="d-flex align-items-start mt-3">
            <a asp-action="Cadastra" asp-controller="Contato" class="btn btn-outline-primary" role="button">Adicionar novo caontato</a>
        </div>
        <br>
        <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
            <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
            </symbol>
            <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
                <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
            </symbol>
            <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
            </symbol>
        </svg>
        @if (TempData["MensagemSucesso"] != null)
        {


            <div class="alert alert-success d-flex align-items-center" role="alert">
                <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill" /></svg>
                <div>
                    @TempData["MensagemSucesso"]
                </div>
                <button type="button" data-bs-dismiss="alert" class="btn btn-danger btn-sm btn-close close-alert" aria-label="Close">X</button>
            </div>
        }

        @if (TempData["MensagemErro"] != null)
        {

            <div class="alert alert-danger d-flex align-items-center" role="alert">
                <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:">

                    <use xlink:href="#exclamation-triangle-fill" />
                </svg>

                <div>
                    @TempData["MensagemErro"]

                </div>
                <button type="button" data-bs-dismiss="alert" class="btn btn-danger btn-sm btn-close close-alert" aria-label="Close">X</button>
            </div>
        }
        <br>

        <h1 class="h1 display-4 text-white mb-3 ">Listagem de contatos</h1>
        <div class="bg-white p-3 rounded-3">

            <table class="table table-striped hover  " id="table-contatos" style="width:100%">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Email</th>
                        <th scope="col">Celular</th>
                        <th scope="col"></th>

                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (ContatoModel item in Model)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.Nome</td>
                                <td>@item.Email</td>
                                <td>@item.Telefone</td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Basic example">
                                        <a asp-route-id="@item.Id" asp-action="Editar" asp-controller="Contato" role="button" class="btn btn-primary"><i class='bx bx-edit-alt' style='color:#f9f7f7'></i></a>
                                        <a asp-route-id="@item.Id" asp-action="Deletar" asp-controller="Contato" role="button" class="btn btn-danger"><i class='bx bx-x'></i></a>
                                    </div>
                                </td>
                            </tr>


                        }
                    }



                </tbody>
            </table>
        </div>
    </div>


</main>