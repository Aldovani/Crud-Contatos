@model ContatoModel;
@{
    ViewData["Title"] = "Deletar Contato";

}


<header class="container">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-action="Index" asp-controller="Home">Controle de contatos</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Contato" aria-current="page">Contatos</a>

                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Cadastra" asp-controller="Contato">Cadastra</a>

                    </li>


                </ul>
            </div>
        </div>
    </nav>
</header>

<main>
    <div class="container">

        <div class="text-white ">
            <h1 class="h3 text-white-50">Realmente desaja deletar o @Model.Nome do contato ?</h1>
        </div>

        <a asp-action="Index" asp-controller="Contato" class="me-3 btn btn-primary" role="button">Cancelar  Exclusão </a>
        <a asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id" class="btn btn-danger" role="button">Confirmar  Exclusão </a>
    </div>


</main>